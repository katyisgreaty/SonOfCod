@model  SonOfCod.Models.Subscriber
@using System.Security.Claims

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-down container">
    <h4>Subscribe to our newsletter, "Oh My Cod!"</h4>
    @using (Html.BeginForm())
    {
        <label>Name: </label>
        @Html.TextBoxFor(model => model.Name)
        <br />

        <label>Email address: </label>
        @Html.TextBoxFor(model => model.Email)
        <br />

        <label>Favorite Sea Creature: </label>
        @Html.TextBoxFor(model => model.FaveSeaCreature)
        <input type="submit" value="Add new subscriber" />
        <br />
    }
    <p>@Html.ActionLink("Home", "Index")</p>
</div>